@model IEnumerable<MyCookBook.Models.Cathegory>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/cathegory")
    @Scripts.Render("~/bundles/cookbook")
}

@{
    ViewBag.Title = "Категории";
}

<h2>Категории</h2>
    <br>

    <p>
        <input type="button" value="Добавить" onclick="Redirect('@Url.Action("Create", "CathegoryEdit")')" />
    </p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr class="@item.CathegoryId">
        <td>
            <img src="@item.ImageLink">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <input type="button" value="Изменить" onclick="Redirect('@Url.Action("Edit/"+item.CathegoryId, "CathegoryEdit")')" />
            <input type="button" value="Удалить" onclick="Delete(@item.CathegoryId)" />
        </td>
    </tr>
}

</table>
