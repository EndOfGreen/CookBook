@model IEnumerable<MyCookBook.Models.Cuisine>

@{
    ViewBag.Title = "Кухни";
}

<h2>Редактировать Кухни</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.CuisineId }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.CuisineId })
        </td>
    </tr>
}

</table>
