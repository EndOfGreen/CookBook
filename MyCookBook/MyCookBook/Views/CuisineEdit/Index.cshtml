@model IEnumerable<MyCookBook.Models.Cuisine>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/cuisine")
}

@{
    ViewBag.Title = "Кухни";
}

<h2>Редактировать Кухни</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="@item.CuisineId">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.CuisineId }) |
            <input type="button" value="Изменить" onclick="Redirect('@Url.Action("Edit/"+item.CuisineId, "CuisineEdit")')" />
            <input type="button" value="Удалить" onclick="Delete(@item.CuisineId)" />
        </td>
    </tr>
}

</table>
